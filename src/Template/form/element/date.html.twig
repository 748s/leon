{% extends "@Leon/form/element/element.html.twig" %}
{% block content %}
    <input type="text" class="form-control" id="{{ element.name }}" name="{{ element.name }}" value="{{ form.entity[element.name] }}" {% if element.maxLength %}maxlength="{{ element.maxLength }}"{% endif %} {% if element.placeholder and element.showPlaceholder %}placeholder="{{ element.placeholder }}" {% endif %} {% if element.minLength %}required {% endif %} style="max-width: 10em;" />
    <script>
        $('#{{ element.name }}').datetimepicker({
            format: "yyyy-mm-dd",
            minView: 2,
            startView: 2,
            autoclose: true
        });
    </script>
{% endblock %}
