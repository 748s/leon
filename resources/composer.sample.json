{
    "repositories": [
        {"type": "vcs", "url": "http://github.com/748s/leon.git"}
    ],
    "require": {
        "thehiredgun/leon": "dev-master"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4" : {
            "App\\" : "App"
        }
    },
    "scripts": {
        "post-update-cmd": [
            "mkdir -p components",
            "cp -r vendor/components/jquery  components/jquery",
            "cp -r vendor/components/bootstrap components/bootstrap",
            "cp -r vendor/components/bootstrap-datetimepicker components/bootstrap-datetimepicker",
            "cp -r vendor/bootstrap-select/bootstrap-select components/bootstrap-select",
            "cp -r vendor/filsh/jquery-autocomplete/dist components/jquery-autocomplete",
            "cp -r vendor/thehiredgun/leon/resources/components components/leon"
        ]
    }
}
