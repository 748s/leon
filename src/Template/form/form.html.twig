<form method="post"{% if form.action %} action="{{ form.action }}"{% endif %}{% if form.multipartFormData %} enctype="multipart/form-data"{% endif %}>
    {% include '@Leon/component/alert.html.twig' with {'alert': form.alert} %}
    {% if form.title %}<h3>{{ form.title }}</h3>{% endif %}
    {% for element in form.elements %}
        {% include element.template %}
    {% endfor %}
    <div class="form-group text-right">
        {% if cancelLink %}<a class="pull-left btn btn-default" href="{{ cancelLink }}">Cancel</a>{% endif %}
        {% if deleteLink %}<a class="pull-left btn backgroundRed" href="{{ deleteLink }}">Delete</a>{% endif %}
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
    <script>
        $('select').selectpicker();
    </script>
</form>

